<%= paginate @users %>

<button name="create"></button>

<table border="1">
  <tr>
    <th>
    Name
    </th>
    <th>
    Email
    </th>
    <th>
    Admin
    </th>
  </tr>
  <% @users.each do |user| %>
    <tr>
      <td>
        <b><%= user.full_name %></b>
      </td>
      <td>
      <%= user.email %>
      </td>
      <td>
        <% if user.admin == true %>
          yes
        <% else %>
          no
        <% end %>
      </td>    
    </tr>
  <% end %>
</table>